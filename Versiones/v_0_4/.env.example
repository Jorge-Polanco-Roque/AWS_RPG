# Server Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Database Configuration (PostgreSQL - optional)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cosmic_codex
POSTGRES_USER=cosmic_user
POSTGRES_PASSWORD=your_super_secret_db_password

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Application Configuration
ADMIN_EMAIL=admin@cosmic-codex.com
ADMIN_PASSWORD=your_admin_password
MAX_QUESTIONS_PER_SESSION=65
DEFAULT_SANITY_LEVEL=100
DEFAULT_QUESTION_TIME_LIMIT=120

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090